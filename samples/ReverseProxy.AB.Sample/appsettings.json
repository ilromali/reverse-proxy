{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      // Uncomment to hide diagnostic messages from runtime and proxy
      // "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ReverseProxy": {
    // Routes tell the proxy which requests to forward
    "Routes": [
      {
        // Matches anything and routes it to www.example.com
        "RouteId": "AnExample",
        "ClusterId": "cluster1",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Metadata": {
          "AlternateClusters" : "cluster1;cluster2;cluster3"
        }
      },
      {
        // matches /something/* and routes to 2 external addresses
        "RouteId": "route2",
        "ClusterId": "cluster2",
        "Match": {
          "Path": "/something/{*any}"
        }
      }
    ],
    // Clusters tell the proxy where and how to forward requests
    "Clusters": {
      "cluster1": {
        "Metadata": {
          "Ratio": "10"
        },
        "Destinations": {
          "example.com": {
            "Address": "http://www.example.com/"
          }
        }
      },
      "cluster2": {
        "Metadata": {
          "Ratio": "20"
        },
        "Destinations": {
          "first_destination": {
            "Address": "https://contoso.com"
          },
          "another_destination": {
            "Address": "https://bing.com"
          }
        },
        "LoadBalancingPolicy": "PowerOfTwoChoices"
      },
      "cluster3": {
        "Metadata": {
          "Ratio": "30"
        },
        "Destinations": {
          "first_destination": {
            "Address": "https://live.com"
          },
          "another_destination": {
            "Address": "https://azure.com"
          }
        },
        "LoadBalancingPolicy": "PowerOfTwoChoices"
      }
    }
  }
}
