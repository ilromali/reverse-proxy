{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "https": {
        "url": "https://localhost:5001"
      }
    }
  },
  "Gateway": {
    "DiscoveryMechanism": "static",
    "StaticDiscoveryOptions": {
      "Backends": [
        {
          "BackendId": "backend1"
        }
      ],
      "Endpoints": {
        "backend1": [
          {
            "EndpointId": "backend1/endpoint1",
            "Address": "https://localhost:10000/"
          }
        ]
      },
      "Routes": [
        {
          "RouteId": "backend1/route1",
          "BackendId": "backend1",
          "Rule": "Host('localhost') && Path('/{**catchall}')"
        }
      ]
    }
  }
}
